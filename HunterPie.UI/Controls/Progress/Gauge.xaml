<UserControl x:Class="HunterPie.UI.Controls.Progress.Gauge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converters="clr-namespace:HunterPie.UI.Architecture.Converters"
        mc:Ignorable="d" 
        d:DesignHeight="10" 
        d:DesignWidth="80"
        d:BorderBrush="{StaticResource GRAY}"
        d:Foreground="{StaticResource YELLOW}"
        x:Name="GaugeComponent">
    <UserControl.Resources>
        <converters:CurrentValueToWidthConverter x:Key="CurrentValueToWidthConverter"/> 
    </UserControl.Resources>
    <Grid>
        <Rectangle Fill="{Binding Background, ElementName=GaugeComponent}"
                   StrokeThickness="1"
                   Stroke="{Binding BorderBrush, ElementName=GaugeComponent}"
                   RadiusX="{Binding CornerRadius, ElementName=GaugeComponent}"
                   RadiusY="{Binding CornerRadius, ElementName=GaugeComponent}"/>

        <Rectangle Fill="{Binding Foreground, ElementName=GaugeComponent}"
                   Stroke="Transparent"
                   RadiusX="{Binding CornerRadius, ElementName=GaugeComponent}"
                   RadiusY="{Binding CornerRadius, ElementName=GaugeComponent}"
                   StrokeThickness="1">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Orientation, ElementName=GaugeComponent}"
                                     Value="{x:Static Orientation.Horizontal}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="Width">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource CurrentValueToWidthConverter}">
                                        <Binding Path="Current" ElementName="GaugeComponent"/>
                                        <Binding Path="Max" ElementName="GaugeComponent"/>
                                        <Binding Path="ActualWidth" ElementName="GaugeComponent"/>
                                        <Binding Path="Margin" RelativeSource="{RelativeSource Self}"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Orientation, ElementName=GaugeComponent}"
                                     Value="{x:Static Orientation.Vertical}">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="Height">
                                <Setter.Value>
                                    <MultiBinding Converter="{StaticResource CurrentValueToWidthConverter}">
                                        <Binding Path="Current" ElementName="GaugeComponent"/>
                                        <Binding Path="Max" ElementName="GaugeComponent"/>
                                        <Binding Path="ActualHeight" ElementName="GaugeComponent"/>
                                        <Binding Path="Margin" RelativeSource="{RelativeSource Self}"/>
                                    </MultiBinding>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>

        <Rectangle Fill="Transparent"
                   StrokeThickness="1"
                   Stroke="{Binding BorderBrush, ElementName=GaugeComponent}"
                   RadiusX="{Binding CornerRadius, ElementName=GaugeComponent}"
                   RadiusY="{Binding CornerRadius, ElementName=GaugeComponent}"/>
    </Grid>
</UserControl>
