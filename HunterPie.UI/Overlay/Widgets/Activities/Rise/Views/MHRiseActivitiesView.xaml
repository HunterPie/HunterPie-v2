<UserControl x:Class="HunterPie.UI.Overlay.Widgets.Activities.Rise.Views.MHRiseActivitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Rise.Views"
             xmlns:viewModels="clr-namespace:HunterPie.UI.Overlay.Widgets.Activities.Rise.ViewModels"
             mc:Ignorable="d" 
             Width="240"
             d:DataContext="{d:DesignInstance viewModels:MHRiseActivitiesViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:SubmarinesView Grid.Row="0" 
                              DataContext="{Binding Submarines, Mode=OneTime}"/>
        <local:CohootNestsView Grid.Row="1"
                               Height="40"
                               DataContext="{Binding CohootNests, Mode=OneTime}"/>
    </Grid>
</UserControl>
